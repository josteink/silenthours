<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="enable_service"
        android:title="@string/pref_title_enable_service"
        android:summary="@string/pref_description_enable_service"
        android:defaultValue="true" />

    <ListPreference
        android:key="operation_mode"
        android:title="@string/pref_title_operation_mode"
        android:defaultValue="0"
        android:entries="@array/pref_operation_mode_titles"
        android:entryValues="@array/pref_operation_mode_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
